<div class="box">
    <h2>üåç IP Tracer</h2>

    <input type="text" id="ip" placeholder="Enter IP address (optional)">
    <button onclick="traceIP()">Trace IP</button>

    <div class="result" id="result"></div>
</div>

<script>
async function traceIP() {
    const ip = document.getElementById("ip").value.trim();
    const result = document.getElementById("result");
    result.innerHTML = "‚è≥ Tracing...";

    let url = ip ? `https://ipapi.co/${ip}/json/` : "https://ipapi.co/json/";

    try {
        const res = await fetch(url);
        const data = await res.json();

        if (data.error) {
            result.innerHTML = "‚ùå Invalid IP Address";
            return;
        }

        result.innerHTML = `
            <div class="row"><b>IP:</b> ${data.ip}</div>
            <div class="row"><b>Country:</b> ${data.country_name}</div>
            <div class="row"><b>City:</b> ${data.city}</div>
            <div class="row"><b>Region:</b> ${data.region}</div>
            <div class="row"><b>ISP:</b> ${data.org}</div>
            <div class="row"><b>Latitude:</b> ${data.latitude}</div>
            <div class="row"><b>Longitude:</b> ${data.longitude}</div>
            <div class="row">
                <b>Map:</b> 
                <a target="_blank" href="https://www.google.com/maps?q=${data.latitude},${data.longitude}">
                    View Location
                </a>
            </div>
        `;
    } catch (err) {
        result.innerHTML = "‚ö†Ô∏è Something went wrong!";
    }
}
</script>

